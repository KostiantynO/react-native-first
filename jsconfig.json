{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "hooks/*": ["src/hooks/*"],
      "utils/*": ["src/utils/*"],
      "context/*": ["src/context/*"],
      "common/*": ["src/common/*"],
      "components/*": ["src/components/*"],
      "helpers/*": ["src/helpers/*"],
      "assets/*": ["src/assets/*"]
    },
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES6",
    "importHelpers": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "alwaysStrict": true,
    "jsx": "react-native",
    "strictFunctionTypes": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "build",
    "web-build",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],

  "include": ["src/**/*", "global.d.ts"]
}
